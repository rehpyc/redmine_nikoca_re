- content_for(:header_tags) do
  = stylesheet_link_tag    "index.css",         plugin: "redmine_nikoca_re"
  = javascript_include_tag "jquery.balloon.js", plugin: "redmine_nikoca_re"
  :javascript 
    $(function () {
      $("img.balloon").balloon( {
        tipSize: 10,
        css: {
          width:           "100px",
          height:          "auto",
          wordBreak:       "break-all",
          boxShadow:       "none",
          color:           "#444",
          backgroundColor: "#F8F8A0"
        }
      });
    });

%table.nikocale
  %thead
    %tr
      %th.username
        = l(:field_user)
      %th
        %table.calender
          %tr
            - @dates.each do |date|
              - date_tag(date, @dates[0] == date)
  %tbody
    - @users.each do |user|
      %tr{ class: "#{ cycle("odd", "even") }" }
        %td.yyy
          = link_to_user(user)
        %td.yyy
          %table.calender
            %tr
              - @dates.each do |date|
                %td
                  - link_comment_face_tag(@project, @niko_faces[user.name][date.day])
    %tr.team_row
      %td
        = l(:team_feeling)
      %td
        %table.calender
          %tr
            - @dates.each do |date|
              %td
                - concat(feeling_tag(@team_feelings[date.day]))